{
  "expo": {
    "name": "soundhunters",
    "slug": "soundhunters",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "This app uses the microphone to record audio while you are using the video camera"
        }
      ]
    ],
    "splash": {
      "image": "./assets/splashscreen_light.png",
      "resizeMode": "contain",
      "backgroundColor": "#E7DFD2"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio while you are using the video camera"
      }
    },
    "android": {
      "package": "com.soundhunters.soundhunters",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
